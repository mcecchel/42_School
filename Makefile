NAME		= push_swap
NAME_BONUS	= checker
CFLAGS		= -Wall -Wextra -Werror -g -I. -ILibft_complete
SRC			= src/push.c \
			src/swap.c \
			src/rotate.c \
			src/reverse_rotate.c \
			src/list_aux.c \
			src/stack_initialize.c \
			src/find_utils.c \
			src/moves_aux.c \
			src/execute_moves.c \
			src/sort.c \
			main.c

SRC_BONUS	= my_checker/checker.c \
			src/push.c \
			src/swap.c \
			src/rotate.c \
			src/reverse_rotate.c \
			src/list_aux.c \
			src/stack_initialize.c \
			src/find_utils.c \
			src/moves_aux.c \
			src/execute_moves.c \
			src/sort.c \

# OBJ = $(SRC:.c=.o)
# OBJ_BONUS = $(SRC_BONUS:.c=.o)
ARG ?= "default"

all: $(NAME)
bonus: $(NAME_BONUS)

$(NAME): $(SRC)
	$(MAKE) -C Libft_complete
	$(CC) $(CFLAGS) $(SRC) -LLibft_complete -lft -o $(NAME)
	$(MAKE) kira

$(NAME_BONUS): $(SRC_BONUS)
	$(MAKE) -C Libft_complete
	$(CC) $(CFLAGS) $(SRC_BONUS) -LLibft_complete -lft -o $(NAME_BONUS)
	$(MAKE) kira

clean:
	$(MAKE) -C Libft_complete clean
# rm -f $(OBJ) $(OBJ_BONUS)

fclean: clean
	rm -f $(NAME) $(NAME_BONUS)
	$(MAKE) -C Libft_complete fclean

re: fclean all
.SILENT:

RED			:= ${shell tput setaf 1}
BLUE		:= ${shell tput setaf 4}
NO_COLOR	:= ${shell tput sgr0}
BOLD		:= ${shell tput bold}

